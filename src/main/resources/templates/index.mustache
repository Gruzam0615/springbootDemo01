{{>layout/header}}	
	<div class="col-md-12">
		<div class="row">
			<div class="col-md-6">
				<!-- userName 존재하는 경우 -->
				{{#LoginUserName}}
					Logged in as: <span id="user">{{LoginUserName}}</span>
					<a href="/logout" class="btn btn-info active" role="button">Logout</a>
				{{/LoginUserName}}
				
				<!-- userName 존재하지 않는 경우 -->
				{{^LoginUserName}}
					<a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google</a>
					<a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">Naver</a>
				{{/LoginUserName}}
				
			</div>
		</div>
	</div>
	<br>
	<!-- 목록 출력 -->
	<table class="table table-horizontal table-bordered">
	<thead class="thead-strong">
		<tr>
			<th>게시글 번호</th>
			<th>제목</th>
			<th>작성자</th>
			<th>조회수</th>
			<th>최종수정일</th>			
		</tr>
	</thead>
	<tbody id="tbody">
	{{#posts}}
		<tr>
			<td class="idx" id={{id}}>{{id}}</td>
			<!-- <td>{{title}}</td> -->
			<td><a href="/posts/update/{{id}}" id={{id}}  class="btn-read" onclick="updateViewCount(this.id)">{{title}}</a></td>
			<td>{{author}}</td>
			<td class="vcx" id="viewCount">{{viewcount}}</td>
			<td>{{modifiedDate}}</td>
		</tr>
	{{/posts}}
	</tbody>
	</table>
	<div>
		<a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
	</div>
